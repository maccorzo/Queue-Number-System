.navigation > *
  padding 10px

.navbar
  width 100%
  background-color $primaryColor
  display flex
  padding 1rem 0
  font-family sans-serif
  color white
  box-shadow 0 3px 2px $accentColor
.navbar__items
  display flex
  
.navbar__items--right
  margin-left auto
  padding-right 1rem
.navbar__link
  font-family Rubik
  font-size 1.25rem
  padding-right .5rem
  color white
  align-self center
.navbar__link-toggle
  display none
.navbar__link--active
  font-weight 800
  color $accentColor
.navbar__link-brand
  padding-left 1rem
  font-size 1.75rem

.navbar__toggle-button::after
  content ""
  background-color white
  height .25rem
  width 2rem
  position absolute
  top 200%
  width 100%
  left 0

@media only screen and (max-width 768px)
  .navbar__items, .navbar
    flex-direction column
  .navbar__items
    display none
  .navbar__items--right
    margin-left 0
  .navbar__link
    padding .25rem 0
  .navbar__link-brand
    font-size 1.25rem
  .navbar__link-toggle
    align-self flex-end
    padding 1.25rem 2rem
    display initial
    position absolute
    cursor pointer
  .navbar__toggle--show
    display flex
  .navbar__toggle-button
    background-color white
    height .25rem
    width 2rem
    position absolute
    top 45%
    left 15%
    transition all 1s ease
  .navbar__toggle-button::before
    content ""
    background-color white
    height .25rem
    width 2rem
    position absolute
    bottom 200%
    width 100%
    left 0